
 <div class="container">
  <div class="row">
   <div class="col-md-3">        
    <%= render 'users/list', user: @user,book: @book_new %> 
      </div>
         <div class="col-md-8 offset-md-1">
            <table class="table table-hover table-inverse">
           <h2>Book detail</h2>
              <table class="table">
                <tbody><tr>
                   <td>
                     <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
                     </td> 
                     <td>
                    <%= link_to user_path(current_user.id) do %>
                     <%= @book.user.name %>
                     <% end %>
                   </td> 
                   <td>
                     <%= link_to book_path(@book.id) do %>
                     <%= @book.title %>
                     <% end %>
                   </td>
                   <td>
                     <%= @book.body %>
                   </td>
                   <td>
                    <%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-sm btn-success" %> 
                   </td>
                   <td>
                    <%= link_to "Destroy", book_path(@book), class:"btn btn-sm btn-danger", method: :delete, data: {confirm: "本当に削除しますか？"} %>
                   </td>
                 </tr>
               </tbody></table>
   </div>
  </div>
 </div>