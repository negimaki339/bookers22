
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>User info</h1>
      
     <%= form_with model:@user, local:true do |user| %>
      <div class="form-group">
       <label for="user_name">Name</label>
         <%= user.text_field :name, class:"form-control book_title" %>
      </div>
      <div class="form-group">
       <label for="user_image">Image</label>
       <%= user.attachment_field :profile_image, placeholder: "プロフィール画像" %>
       </div>
      <div class="form-group">
        <label for="user_introduction">Introduction</label>
           <%= user.text_area :introduction, class:"form-control book_body" %>
      </div>
      <div class="form-group">
           <%= user.submit 'Update User', class:"btn btn-success" %>
      </div>
     
      <% end %>